  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "lib": ["ES2021"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
